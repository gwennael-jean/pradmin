{% extends '.components/card.html.twig' %}

{% block card_header %}
    Connections
{% endblock %}

{% block card_body %}
    <div class="list-group">
        {% for database in databases %}
            <a class="list-group-item list-group-item-action {{ database.id == selected ? 'active' : '' }}"
               data-action="live#action"
               data-action-name="select(database={{ database.id }})">
                {{ database.name }}
            </a>
        {% endfor %}
    </div>
{% endblock %}
